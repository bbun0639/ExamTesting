@model IEnumerable<ExamTesting.Models.Subject>

@{
    ViewData["Title"] = "Subjects List";
}

<br />
<br />


<body class="py-5">
    <div class="container card p-4">
        <div class="col">
            <h2 class="text" style="color:#E154A2">Subjects List</h2>
        </div>

        <div class="col pt-3 pl-5 pr-5">

            <div class="col pt-4">
                <input class="form-control" id="myInput" type="text" placeholder="Search..">
            </div>

            <div class="col-2 pt-4 pb-4">
                <a asp-action="Create" class="btn btn-violet">+ New Subject</a>
            </div>

            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(s => s.SubjectName)
                    </th>

                    <th>
                        @Html.DisplayNameFor(s => s.SubjectLevels)
                    </th>
                    <th></th>
                </tr>

                @foreach (var subject in Model)
                {
                    <tbody id="myTable">
                        <tr data-href="@Url.Action("Detail/"+subject.SubjectId)">
                            <td>
                                @Html.DisplayFor(s => subject.SubjectName)
                            </td>
                            <td>
                                @Html.DisplayFor(s => subject.SubjectLevels)

                            </td>
                            <td class="text-center">
                                <partial name="_ButtonTable" model="subject.SubjectId" />
                            </td>
                        </tr>
                    </tbody>
                }

            </table>


        </div>

    </div>
</body>



@*Search Function*@

<script>
    $(document).ready(function () {
        $("#myInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>



















