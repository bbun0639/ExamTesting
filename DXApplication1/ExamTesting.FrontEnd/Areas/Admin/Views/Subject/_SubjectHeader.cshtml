@using ExamTesting.Models
@model ExamTesting.Models.Subject

<div class="mb-4 bg-white">
    <div class="col h3 font-weight-normal">
        @Model.SubjectName
    </div>
</div>

<ul class="nav nav-tabs" id="myNav">
    <li class="nav-item">
        <a class="nav-link @checkCurrentAction("Index")" asp-action="Index" asp-route-id="@Model.SubjectId">Details</a>
    </li>
    <li class="nav-item">
        <a class="nav-link @checkCurrentAction("ListExams")" asp-action="ListExams" asp-route-id="@Model.SubjectId">
            Exams <span class="badge badge-danger">@Model.Exams.Count</span>
        </a>
    </li>

</ul>



@functions {

    public string checkCurrentAction(string nameAction)
    {
        var currentAct = this.ViewContext.RouteData.Values["action"].ToString();
        if (currentAct == nameAction)
            return "active";
        return "";
    }
}
