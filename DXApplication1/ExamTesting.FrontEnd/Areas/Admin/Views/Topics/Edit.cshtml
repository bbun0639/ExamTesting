@model ExamTesting.Models.Topic
@using ExamTesting

@{
    ViewData["Title"] = "Topic Edit";
}

<form method="post" asp-action="Edit">

    <div class="container card p-4">
        <div class="col">
            <h2 class="text" style="color:#E154A2">Edit Topic</h2>
        </div>

        <div class="col pt-4 px-5">

            <div class="form-group row pt-2 px-5">
                <div class="col-2">
                    <label>Name</label>
                </div>
                <div class="col">
                    @Html.DevExtreme().TextBoxFor(t => t.TopicName).Placeholder("Topic Name")
                </div>
            </div>


            <div class="row py-5 px-5">
                <div class="col text-left">
                    <a asp-action="Index" class="btn btn-back">< Back</a>
                </div>

                <div class="col text-right">
                    <input type="submit" class="btn btn-violet" asp-area="Admin" asp-controller="Topic" asp-action="Edit" value="Update >" />
                </div>

            </div>
        </div>

    </div>

</form>



